<!DOCTYPE html>
<html ng-app="journaux">

<head>
    <title>Administration</title>

    <meta http-equiv="Content-Type" content="text/html; charset=latin1" />
    <script src="/js/coreJs/angular.js"></script>
    <script src="/js/coreJs/jquery.js" type="text/javascript"></script>
    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="/css/additional.css" rel="stylesheet" type="text/css" />
    <script src="https://code.angularjs.org/1.6.6/angular-route.js"></script>
    <script src="https://code.angularjs.org/1.6.6/angular-resource.js"></script>

    <script src="/js/controllers/journaux.js"></script>
    <script src="/js/controllers/adminControllers.js"></script>
    <script>
        angular.module("journaux", ["ngRoute", "ngResource"])
            .config(function ($routeProvider, $locationProvider) {
                $locationProvider.html5Mode(false);
                $locationProvider.hashPrefix("");
                $routeProvider.when("/login", {
                    templateUrl: "/PrivateViews/adminLogin.html"
                });
                $routeProvider.when("/main", {
                    templateUrl: "/PrivateViews/adminMain.html"
                });
                $routeProvider.otherwise({
                    redirectTo: "/login"
                });
            });
    </script>
    <script src="/js/controllers/adminControllers.js"></script>
    <script src="/js/controllers/adminProductController.js"></script>
</head>

<body>
    <ng-view />
</body>

</html>
